<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3" >

        <ImageButton
            android:src="@drawable/ic_high_heels"
            android:padding="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#B8E3EF"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1" />

        <ImageButton
            android:src="@drawable/ic_gravata"
            android:padding="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#88C5D6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1" />

        <ImageButton
            android:src="@drawable/ic_bebe"
            android:padding="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#71B4C6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1" />

        <ImageButton
            android:src="@drawable/ic_airplane"
            android:padding="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#4694AA"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1" />

        <ImageButton
            android:src="@drawable/ic_mobile_phone"
            android:padding="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#387688"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="1" />

        <ImageButton
            android:src="@drawable/ic_coffee"
            android:padding="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#2C5C6A"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1" />

    </GridLayout>
</ScrollView>